{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "habitat": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#consent_prompt_submit",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "name": "DO_CONSENT"
            },
            {
                "name": "SAVE_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "wait",
                            "waitTime": 250
                        },
                        {
                            "type": "click",
                            "target": {
                                "selector": "#consent_prompt_submit"
                            }
                        },
                        {
                            "type": "ifcss",
                            "target": {
                                "selector": ".sp_choice_type_SAVE_AND_EXIT",
                                "iframeFilter": true,
                                "displayFilter": true
                            },
                            "falseAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#consent_prompt_submit"
                                }
                            }
                        }
                    ]
                },
                "name": "UTILITY"
            }
        ]
    }
}